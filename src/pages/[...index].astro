---
import PostList from "@/components/PostList.astro"
import Layout from "@/layouts/Layout.astro"

import { defaultLocale, moreLocales } from "@/config"
import { getPinnedPosts, getPostsByYear } from "@/utils/content"
import { getPosts } from "@/lib/notion/posts"
import type { Post } from "@/lib/notion/types"

/* ---------------------------
   Static Paths
---------------------------- */

export async function getStaticPaths() {
  type PathItem = {
    params: { index: string | undefined }
    props: { lang: string }
  }

  const paths: PathItem[] = []

  paths.push({
    params: { index: undefined },
    props: { lang: defaultLocale },
  })

  moreLocales.forEach((lang: string) => {
    paths.push({
      params: { index: `${lang}/` },
      props: { lang },
    })
  })

  return paths
}

/* ---------------------------
   Page Data
---------------------------- */

const { lang } = Astro.props

const pinnedPosts = await getPinnedPosts(lang)
const postsByYear = await getPostsByYear(lang)

/* Notion posts */
let notionPosts: Post[] = []
if (import.meta.env.NOTION_TOKEN) {
  notionPosts = await getPosts()
}

// Merge Notion posts into the years map
notionPosts.forEach((post) => {
  const date = post.publishDate ? new Date(post.publishDate) : new Date()
  const year = date.getFullYear()
  
  // Convert Notion post to the format expected by PostList
  const formattedPost: any = {
    id: post.id,
    data: {
      title: post.title,
      published: date,
      abbrlink: post.slug,
      pin: post.pinned ? 1 : 0,
      description: post.excerpt,
      tags: post.tags,
      lang: lang || defaultLocale,
    },
    remarkPluginFrontmatter: {
      minutes: 5 // Default value
    }
  }

  if (post.pinned) {
    pinnedPosts.push(formattedPost)
  } else {
    if (!postsByYear.has(year)) {
      postsByYear.set(year, [])
    }
    postsByYear.get(year)!.push(formattedPost)
  }
})

// Re-sort years and posts within years
const sortedYears = new Map([...postsByYear.entries()].sort((a, b) => b[0] - a[0]))
sortedYears.forEach(posts => posts.sort((a, b) => b.data.published.valueOf() - a.data.published.valueOf()))
pinnedPosts.sort((a, b) => (b.data.pin ?? 0) - (a.data.pin ?? 0))
---

<Layout>


  <!-- Pinned Posts -->
  {pinnedPosts.length > 0 && (
    <section class="mb-7.5">
      <div class="uno-decorative-line" />
      <PostList posts={pinnedPosts} lang={lang} pinned={true} />
    </section>
  )}

  <!-- Regular Posts -->
  {[...sortedYears.entries()].map(([_year, posts]) => (
    <section class="mb-7.5">
      <div class="uno-decorative-line" />
      <PostList posts={posts} lang={lang} />
    </section>
  ))}

</Layout>
